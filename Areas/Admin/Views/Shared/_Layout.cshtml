<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - StudyRazorPage</title>
	<link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	@RenderSection("head", false)
</head>
<body>

	<nav class="navbar navbar-expand-lg bg-body-tertiary">
		<div class="container">
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
				<div class="navbar-nav">
					<a class="nav-link" asp-action="Index" asp-controller="Category">Danh mục</a>
					<a class="nav-link" asp-action="Index" asp-controller="Product">Sản phẩm</a>
					<a class="nav-link" asp-action="Index" asp-controller="User">Tài khoản</a>
				</div>
			</div>
		</div>
	</nav>

	<div class="container mt-2">

		<partial name="_Notify" />

		@RenderBody()
	</div>
	<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
	@RenderSection("scripts", false)
</body>
</html>