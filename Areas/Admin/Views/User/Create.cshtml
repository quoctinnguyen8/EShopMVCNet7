@model AppUser

@section scripts{
	<partial name="_Validation" />
}

<div class="row">
	<div class="col-md-6">
		<form method="post">
			<h2>Tạo tài khoản</h2>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mt-3">
				<label class="form-label">Tên đăng nhập</label>
				<input asp-for="Username" class="form-control" />
				<span asp-validation-for="Username" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label class="form-label">Mật khẩu</label>
				<input asp-for="Password" class="form-control" type="password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label class="form-label">Nhập lại mật khẩu</label>
				<input asp-for="CfmPassword" class="form-control" type="password" />
				<span asp-validation-for="CfmPassword" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label class="form-label">Chọn vai trò</label>
				<div>
					<label class="control-label">
						<input asp-for="Role" value="@UserRole.ADMIN" type="radio" />
						Admin
					</label>
					<label class="control-label">
						<input asp-for="Role" value="@UserRole.CUSTOMER" type="radio" />
						Khách hàng
					</label>
				</div>
				<span asp-validation-for="Role" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label class="form-label">Số điện thoại</label>
				<input asp-for="Phone" class="form-control" />
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label class="form-label">Email</label>
				<input asp-for="Email" class="form-control" type="email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mt-3">
				<label class="form-label">Địa chỉ</label>
				<input asp-for="Address" class="form-control" />
				<span asp-validation-for="Address" class="text-danger"></span>
			</div>

			<div class="mt-3">
				<input type="submit" class="btn btn-success" value="Đăng ký tài khoản" />
			</div>
		</form>

	</div>
</div>
